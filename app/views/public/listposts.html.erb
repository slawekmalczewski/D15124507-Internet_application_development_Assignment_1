<!--<div class="container">-->
  <h1>LIST OF ALL POSTS </h1>
  <br>

  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-md-10">
        <h2><%= post.title %></h2>
        <p class="blog-post-meta small text-justify"><%= post.created_at %></p>
        <p class="lead"> <%= truncate(post.body, :length => 300, :omission => "[...]") %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10">
        <!-- placeholder -->
      </div>
      <div class="col-md-2">
        <%= link_to("Read more", {:controller => "public", :action => 'showpost', :id => post.id}, :class => 'btn btn-xs btn-success') %>
      </div>
    </div>

    <hr style="	background-color: #fff; border-top: 2px dashed #8c8b8b;" />
  <% end %>

